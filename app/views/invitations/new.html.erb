<%= form_with model: @invitation, html: {class: 'col-3 mx-auto rounded border border-light py-3 my-2 bg-dark'} do |f| %>
  <%= f.label :user_id, 'Invitee', { class: 'text-light' } %>
  <%= f.select :user_id, options_for_select(@users), {}, { class: 'form-control-plaintext border border-light rounded pl-3 text-light mb-3' } %>
  <%= f.label :event_id, 'Event', { class: 'text-light' } %>
  <%= f.select :event_id, options_for_select(@events), {}, { class: 'form-control-plaintext border border-light rounded pl-3 text-light mb-3' } %>
  <%= f.submit class: 'btn btn-secondary' %>
<% end %>
