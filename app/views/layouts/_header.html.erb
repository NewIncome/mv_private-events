<header>
  <nav class="navbar navbar-expand-lg navbar-light bg-dark text-light">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
      <%= link_to  "Private Events", '/', class: "navbar-brand text-light" %>
      <% if logged_in? %>
        <div class="rightside ml-auto">
          <%= link_to "Events", events_path, class: 'btn btn-outline-light my-2 my-sm-0 mr-1' %>
          <%= link_to 'Post', new_event_path, class: "btn btn-outline-light my-2 my-sm-0 mr-1" %>
          <%= link_to 'Profile', user_path(current_user), class: "btn btn-outline-light my-2 my-sm-0 mr-1" %>
          <%= link_to 'Logout', logout_path, method: :delete, class: "btn btn-outline-light my-2 my-sm-0 mr-1" %>
        </div>
      <% else %>
        <%= link_to 'Login', login_path, class: "btn btn-outline-light my-2 my-sm-0 ml-auto" %>
      <% end %>
    </div>
  </nav>
</header>
