<div class="row">
  <h1 class="col-12 mx-auto text-center font-weight-bold"><%= @user.username %></h1>
  <div class="col-6">
    <h2 class="col-12 mx-auto text-center font-weight-bold">has created <%= pluralize(@user.created_events.count, 'event') %></h2>
    <% @user.created_events.find_each do |event| %>
      <%= link_to event_path(event), class: 'text-decoration-none text-dark' do %>
        <ul class="wrapper col-10 mx-auto mb-3 list-group fl-card">
        <li class="list-group-item p-0"><%= image_tag event.image, class: 'card-img-top m-0 p-0' %></li>
        <li class="list-group-item font-weight-bold"><%= event.name.upcase %></li>
        <li class="list-group-item"><%= event.date %></li>
        <li class="list-group-item"><%= event.description %></li>
      </ul>
      <% end %>
    <% end %>
  </div>
  <div class="col-6">
    <h2 class="col-12 mx-auto text-center font-weight-bold">has <%= pluralize(@user.attended_events.upcoming.count, 'upcoming event') %></h2>
    <% @user.attended_events.upcoming.find_each do |event| %>
      <%= link_to event_path(event), class: 'text-decoration-none text-dark' do %>
        <ul class="wrapper col-10 mx-auto mb-3 list-group fl-card">
        <li class="list-group-item p-0"><%= image_tag event.image, class: 'card-img-top m-0 p-0' %></li>
        <li class="list-group-item font-weight-bold"><%= event.name.upcase %></li>
        <li class="list-group-item"><%= event.date %></li>
        <li class="list-group-item"><%= event.description %></li>
      </ul>
      <% end %>
    <% end %>
    <h2 class="col-12 mx-auto text-center font-weight-bold">has <%= pluralize(@user.attended_events.previous.count, 'previous event') %></h2>
      <%= render @user.attended_events %>
      
  </div>
</div>
